        function showCategoryProducts(category) {
            console.log('Category button clicked:', category);
            const productsDisplay = document.getElementById('products-display');
            const products = productData[category] || [];
            
            if (products.length === 0) {
                productsDisplay.innerHTML = `
                    <div class="col-span-full text-center py-12">
                        <div class="w-24 h-24 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-spray-can text-gray-400 text-3xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-300 mb-2">No Products Available</h3>
                        <p class="text-gray-400">Products for this category will be added soon</p>
                    </div>
                `;
                return;
            }

            productsDisplay.innerHTML = products.map(product => `
                <div class="bg-gray-700 border border-gray-600 rounded-lg shadow-md hover:shadow-lg transition-all transform hover:-translate-y-1 overflow-hidden group cursor-pointer" onclick="openProductModal('${product.name}', '${product.description}', ${product.price}, '${product.image}')">
                    <div class="relative overflow-hidden">
                        <img src="${product.image}" 
                             alt="${product.name}" 
                             class="w-full h-32 object-cover object-center transition-transform duration-300 group-hover:scale-105">
                        <div class="absolute top-2 right-2 bg-yellow-500 text-black px-2 py-1 rounded-full text-xs font-bold">
                            Premium
                        </div>
                    </div>
                    <div class="p-3 text-center">
                        <h4 class="text-sm font-bold text-yellow-400">${product.name}</h4>
                    </div>
                </div>
            `).join('');
        }

        function addToCart(productName, price) {
            alert(`${productName} added to cart for ${price}!`);
        }

        // Modal functions
        function openProductModal(name, description, price, image) {
            console.log('Opening product modal for:', name);
            
            // Update modal content
            document.getElementById('modalProductName').textContent = name;
            document.getElementById('modalProductDescription').textContent = description;
            document.getElementById('modalProductPrice').textContent = price + ' PKR';
            document.getElementById('modalProductImage').src = image;
            document.getElementById('modalProductImage').alt = name;
            
            // Set up modal add to cart button
            const modalAddToCartBtn = document.getElementById('modalAddToCart');
            modalAddToCartBtn.onclick = function() {
                addToCart(name, price);
                closeProductModal();
            };
            
            // Show modal
            const modal = document.getElementById('productModal');
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden'; // Prevent background scrolling
        }

        function closeProductModal() {
            console.log('Closing product modal');
            const modal = document.getElementById('productModal');
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto'; // Restore scrolling
        }

        // Ensure functions are available when page loads
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Premium Perfumes page loaded successfully');
            console.log('Category buttons ready - click any category to view products');
            
            // Set up modal event listeners
            const modal = document.getElementById('productModal');
            const closeBtn = document.getElementById('closeModal');
            
            // Close button click
            closeBtn.addEventListener('click', closeProductModal);
            
            // Click outside modal to close
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    closeProductModal();
                }
            });
            
            // Escape key to close
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                    closeProductModal();
                }
            });
        });
    </script>
</body>
</html>
